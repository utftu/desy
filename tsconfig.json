  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noEmit": true,
    "types": [
      "bun-types" // add Bun global
    ]
  }
}
